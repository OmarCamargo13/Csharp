<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Nomina v1.0</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"><img height="100" width="100" class="img-responsive img-fluid" style="object-fit:cover;color:white" src="~/IMG/goarkus_forblue.png" /></a>
                </div>
                <ul class="nav navbar-nav">

                    <li><a href="/Login/Logout">Cerrar sesión</a></li>

                </ul>
            </div>
        </nav>
    }
    <br />
    <br />
    <br />
    <br />


    <div class="container body-content" style="width:100%" >
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/notify.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>