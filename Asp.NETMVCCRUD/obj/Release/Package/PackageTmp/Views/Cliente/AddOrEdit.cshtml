@model Asp.NETMVCCRUD.Models.Clientes
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Cliente", FormMethod.Post, new { @name = "AddOrEdit", @onsubmit = "return SubmitForm(this)"}))
{
    @Html.HiddenFor(model => model.ClienteID)
    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
        @Html.ValidationMessageFor(model => model.Nombre)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Paterno, new { @class = "control-label" })
        @Html.EditorFor(model => model.Paterno, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
        @Html.ValidationMessageFor(model => model.Paterno)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Materno, new { @class = "control-label" })
        @Html.EditorFor(model => model.Materno, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
        @Html.ValidationMessageFor(model => model.Materno)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.RFC, new { @class = "control-label" })
        @Html.EditorFor(model => model.RFC, new { htmlAttributes = new { @class = "form-control", @maxlength = "13" } })
    </div>


    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" onclick="cmdEnviar_onclick()" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />


<script>
    function cmdEnviar_onclick() {
        var returnStatus = 1;

        if (document.AddOrEdit[1].value == "") {
                $.notify("No es posible continuar, debe ingresar Nombre es obligatorio",{
                                globalPosition :"top center",
                                className : "success"
                            })
            returnStatus = 0;
        }

        if (document.AddOrEdit[2].value == "") {
            $.notify("No es posible continuar, debe ingresar Apellido paterno es obligatorio", {
                globalPosition: "top center",
                className: "success"
            })
         returnStatus = 0;
        }

        if (document.AddOrEdit[4].value == "") {
             $.notify("No es posible continuar, debe ingresar RFC es obligatorio", {
                globalPosition: "top center",
                className: "success"
            })
            returnStatus = 0;
        }


        }
 
</script>